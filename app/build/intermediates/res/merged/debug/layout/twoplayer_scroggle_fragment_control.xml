<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/control_padding"
    tools:context=".twoplayergame.ScroggleTwoPlayerGameActivity">

    <TableRow>
        <Button
            android:id="@+id/player_button_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_low"
            android:drawableTop="@drawable/restart"
            android:text="Resume"/>

        <Button
            android:id="@+id/player_pause_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:drawableTop="@drawable/pause"
            android:text="Pause"/>

        <Button
            android:id="@+id/player_quit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:drawableTop="@drawable/quit"
            android:text="Quit"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/player_mute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="Mute"/>

        <Button
            android:id="@+id/player_unmute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_low"
            android:text="UnMute"/>
    </TableRow>
</TableLayout>
