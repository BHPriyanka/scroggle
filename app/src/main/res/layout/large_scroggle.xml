<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".scroggle.ScroggleGameActivity"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <TableRow>
    <TextView
        android:id="@+id/timer"
        android:text="Time: "
        android:paddingRight="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/score"
            android:text="Score: "
            android:paddingLeft="10dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"/>
    </TableRow>

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <include android:id="@+id/large2" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="1" android:layout_row="0"/>
    <include android:id="@+id/large3" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="2" android:layout_row="0"/>
    <include android:id="@+id/large4" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="0" android:layout_row="1"/>
    <include android:id="@+id/large5" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="1" android:layout_row="1"/>
    <include android:id="@+id/large6" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="2" android:layout_row="1"/>
    <include android:id="@+id/large7" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="0" android:layout_row="2"/>
    <include android:id="@+id/large8" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="1" android:layout_row="2"/>
    <include android:id="@+id/large9" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="2" android:layout_row="2"/>

    <include android:id="@+id/large1" layout="@layout/small_scroggle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_column="0" android:layout_row="0"/>
</GridLayout>
</TableLayout>